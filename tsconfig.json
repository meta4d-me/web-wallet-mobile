{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@utils/": ["./src/utils/*"],//格式一定要写对符号*不能少不然找不到@或者没有代码提示
      "@web3/": ["./src/web3/*"],
      "@$$/": ["./src/$$/*"],
      "@views/": ["./src/views/*"],
      "@m4m/": ["./m4m/*"]
    },
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts","src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
