{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/": ["./public/*"],//格式一定要写对符号*不能少不然找不到@或者没有代码提示
      "@utils/": ["./public/utils/*"],
      "@web3/": ["./public/web3/*"],
      "@App/": ["./dungeondual/*"],
      "@m4m/": ["./m4m/*"]
    },
    "allowJs": true
  },
  "include": ["m4m/*.ts","m4m/**/*.ts", "m4m/**/*.d.ts","public/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
